<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--#region AuthenticationWindow -->

    <Style x:Key="TextBlock.BaseStyle.AuthenticationWindow" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
    </Style>

    <Style x:Key="TextBlock.Titel.AuthenticationWindow" TargetType="TextBlock" BasedOn="{StaticResource TextBlock.BaseStyle.AuthenticationWindow}">
        <Setter Property="Foreground" Value="DarkGray"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>

    <Style x:Key="TextBlock.NameProject.AuthenticationWindow" TargetType="TextBlock" BasedOn="{StaticResource TextBlock.BaseStyle.AuthenticationWindow}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="TextBlock.DescriptionProject.AuthenticationWindow" TargetType="TextBlock" BasedOn="{StaticResource TextBlock.BaseStyle.AuthenticationWindow}">
        <Setter Property="Foreground" Value="LightGray"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <Style x:Key="TextBlock.LoginAndPassword.AuthenticationWindow" TargetType="TextBlock" BasedOn="{StaticResource TextBlock.BaseStyle.AuthenticationWindow}">
        <Setter Property="Foreground" Value="DarkGray"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,35,0,0"/>
    </Style>

    <Style x:Key="TextBlock.Password.AuthenticationWindow" TargetType="TextBlock" BasedOn="{StaticResource TextBlock.BaseStyle.AuthenticationWindow}">
        <Setter Property="Foreground" Value="DarkGray"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,35,0,0"/>
    </Style>

    <!--#endregion-->
    
</ResourceDictionary>