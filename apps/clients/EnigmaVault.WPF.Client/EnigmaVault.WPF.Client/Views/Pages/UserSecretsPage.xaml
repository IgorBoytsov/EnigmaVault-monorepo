<Page x:Class="EnigmaVault.WPF.Client.Views.Pages.UserSecretsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnigmaVault.WPF.Client.Views.Pages"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:behaviors="clr-namespace:EnigmaVault.WPF.Client.Resources.Behaviors"
      xmlns:pages="clr-namespace:EnigmaVault.WPF.Client.ViewModels.Pages" 
      xmlns:sys="clr-namespace:System;assembly=System.Runtime"
      xmlns:attach="clr-namespace:EnigmaVault.WPF.Client.Resources.Attachable"
      d:DataContext="{d:DesignInstance Type=pages:UserSecretsPageVM}"
      mc:Ignorable="d" 
      d:Height="Auto" d:Width="Auto"
      Background="Transparent"
      Title="UserSecretsPage">
    <!--d:DesignHeight="450" d:DesignWidth="800"-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="EditMenuColumn" 
                              Width="{Binding EditMenuColumnWidth, Mode=TwoWay}" 
                              MinWidth="{Binding MinWidthEditMenu}" 
                              MaxWidth="500"/>
        </Grid.ColumnDefinitions>

        <!--#region Боковое меню -->

        <ScrollViewer Grid.Row="0" Grid.RowSpan="3" VerticalScrollBarVisibility="Hidden">
            <Border Style="{StaticResource Border.Base.Card}"
                    Margin="5,0,5,5">
                <DockPanel Margin="5,5,5,7">

                    <!--==========Popups==========-->

                    <!--#region Popup - История изменений записи -->



                    <!--#endregion-->

                    <!--#region Popup - Управление тегами -->



                    <!--#endregion-->

                    <!--#region Popup - Архивные записи -->



                    <!--#endregion-->

                    <!--#region Popup - Карзина -->



                    <!--#endregion-->

                    <!--==========Урпавление==========-->

                    <!--#region Папки -->

                    <DockPanel DockPanel.Dock="Top">

                        <DockPanel DockPanel.Dock="Top">
                            <TextBlock Text="Папки" 
                                       Style="{StaticResource TextBlock.PageSideMenu}" 
                                       FontSize="18"
                                       FontFamily="Bahnschrift SemiBold"
                                       DockPanel.Dock="Left"/>

                            <Viewbox Width="17"
                                     HorizontalAlignment="Right"
                                     Margin="0,0,5,0">
                                <Control Template="{StaticResource Added}"/>
                            </Viewbox>

                        </DockPanel>

                        <ListView Background="Transparent"
                                  BorderThickness="0"
                                  HorizontalContentAlignment="Stretch"
                                  Margin="0,10,0,0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <Viewbox Width="15" Margin="0,0,10,0">
                                            <Control Template="{StaticResource FilledFolder}"/>
                                        </Viewbox>
                                        <TextBlock Text="{Binding}" 
                                                   Foreground="White"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   DockPanel.Dock="Left"/>
                                        <TextBlock Text="15"
                                                   Foreground="White"
                                                   FontSize="14"
                                                   DockPanel.Dock="Right"
                                                   HorizontalAlignment="Right"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <sys:String>Все пароли</sys:String>
                            <sys:String>Избранное</sys:String>
                            <sys:String>Работа</sys:String>
                            <sys:String>Соц.сети</sys:String>
                        </ListView>

                    </DockPanel>

                    <!--#endregion-->

                    <!--#region Управление -->

                    <DockPanel DockPanel.Dock="Top" Margin="5,5,0,0">

                        <TextBlock Text="Управление" 
                                   Style="{StaticResource TextBlock.PageSideMenu}"
                                   FontSize="18"
                                   FontFamily="Bahnschrift SemiBold"
                                   Margin="0,5,0,5"
                                   DockPanel.Dock="Top"/>

                        <Button Content="История изменения" 
                                Style="{StaticResource Button.Page.SideMenu.Management}"
                                attach:ButtonHelper.IconTemplate="{StaticResource Updated}"
                                DockPanel.Dock="Top"/>

                        <Button Content="Добавить тэг" 
                                Style="{StaticResource Button.Page.SideMenu.Management}"
                                attach:ButtonHelper.IconTemplate="{StaticResource Tag}"
                                DockPanel.Dock="Top"/>

                        <Button Content="Корзина" 
                                Style="{StaticResource Button.Page.SideMenu.Management}"
                                attach:ButtonHelper.IconTemplate="{StaticResource Trash}"
                                Foreground="#FF3333"
                                
                                DockPanel.Dock="Bottom"/>

                        <Button Content="Архив" 
                                Style="{StaticResource Button.Page.SideMenu.Management}"
                                attach:ButtonHelper.IconTemplate="{StaticResource Archive}"
                                VerticalAlignment="Bottom"
                                DockPanel.Dock="Bottom"/>

                    </DockPanel>

                    <!--#endregion-->

                </DockPanel>
            </Border>
        </ScrollViewer>


        <!--#endregion-->

        <!--#region Управление списком -->

        <Border Grid.Column="1"
                Style="{StaticResource Border.Base.Card}"
                Margin="0,0,5,0">
            <DockPanel>
                <ComboBox SelectedIndex="0"
                          Width="150"
                          Height="20"
                          HorizontalAlignment="Left"
                          DockPanel.Dock="Left"
                          Visibility="Collapsed">

                    <sys:String>Без группировки</sys:String>
                    <sys:String>Алфовит</sys:String>
                    <sys:String>Тег</sys:String>
                    <sys:String>Году</sys:String>
                </ComboBox>

                <Button Style="{StaticResource Button.App}"
                        Command="{Binding ShowEditMenuCommand}"
                        CommandParameter="{x:Null}"
                        Width="30" 
                        Margin="10,0,5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right"
                        ToolTip="Добавить"
                        ToolTipService.Placement="Right">
                    <Button.Content>
                        <Control Template="{StaticResource Added}"/>
                    </Button.Content>
                </Button>

                <Button Style="{StaticResource Button.App}"
                        Width="30" 
                        HorizontalAlignment="Right"
                        ToolTip="Вид списка"
                        ToolTipService.Placement="Right">
                    <Button.Content>
                        <Control Template="{StaticResource Grid}"/>
                    </Button.Content>
                </Button>

            </DockPanel>
        </Border>

        <!--#endregion-->

        <!--#region Список секретов -->

        <ListView Grid.Column="1" Grid.Row="1"
                  ItemsSource="{Binding SecretDatas}" d:ItemsSource="{d:SampleData ItemCount=5}"
                  SelectedItem="{Binding SelectedSecretData}"
                  Background="Transparent"
                  BorderThickness="0"
                  Foreground="White"
                  Margin="5,5,5,5"
                  FontSize="18"
                  HorizontalContentAlignment="Stretch">

            <!--#region ItemContainerStyle -->

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Margin" Value="0,3,0,0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="5,0,0,0"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="mainBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        Margin="{TemplateBinding Margin}"
                                        SnapsToDevicePixels="true">
                                    <ContentPresenter />
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="mainBorder" Property="Background" Value="#1E2F3A"/>
                                        <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0095F6"/>
                                        <Setter TargetName="mainBorder" Property="BorderThickness" Value="5,0,0,0"/>
                                        <Setter Property="Foreground" Value="#50A7E7"/>
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="mainBorder" Property="Background" Value="#1E2F3A"/>
                                        <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0095F6"/>
                                        <Setter TargetName="mainBorder" Property="BorderThickness" Value="5,0,0,0"/>
                                        <Setter Property="Foreground" Value="#50A7E7"/>
                                    </Trigger>
                                    <!--При навидение на выделенный объект-->
                                    <!--<MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="true"/>
                                            <Condition Property="IsMouseOver" Value="true"/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="mainBorder" Property="Background" Value="#55AAFF" />
                                        <Setter TargetName="mainBorder" Property="BorderBrush" Value="#77CCFF" />
                                    </MultiTrigger>-->

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <!--#endregion-->

            <!--#region ItemTemplate -->

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--#region Иконка сервиса -->

                        <StackPanel Grid.RowSpan="2"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Margin="5,0,10,0">

                            <Image Source="C:\Users\light\Downloads\gmail-icon.png"
                                   Width="40"/>

                        </StackPanel>

                        <!--#endregion-->

                        <!--#region Папка, название сервиса, теги -->

                        <DockPanel Grid.Column="1" Margin="3">
                            <StackPanel DockPanel.Dock="Left">
                                <TextBlock Text="Папка (Будет в будущем)"
                                           DockPanel.Dock="Top"/>

                                <TextBlock Text="{Binding ServiceName}" d:Text="YouTube"
                                           DockPanel.Dock="Top"
                                           VerticalAlignment="Center"
                                           FontFamily="Leelawadee"
                                           FontSize="16"
                                           FontWeight="Bold" />
                            </StackPanel>
                            <WrapPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                                <Border Height="25" BorderBrush="White" BorderThickness="1" CornerRadius="4">
                                    <TextBlock Text="Тег №1" Padding="5" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Height="25" Margin="5,0,0,0" BorderBrush="White" BorderThickness="1" CornerRadius="4">
                                    <TextBlock Text="Тег №2" Padding="5" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </WrapPanel>
                        </DockPanel>

                        <!--#endregion-->

                        <!--#region Кратная информация о сервисе, кнопки управление -->

                        <DockPanel Grid.Column="1" Grid.Row="1" Margin="3">

                            <!--#region Добавлен -->

                            <StackPanel DockPanel.Dock="Left">
                                <WrapPanel>
                                    <Viewbox Width="15" Margin="0,0,5,0">
                                        <Control Template="{StaticResource FilledCorrect}"/>
                                    </Viewbox>
                                    <TextBlock Text="Добавлен" DockPanel.Dock="Top" Foreground="#438DB0"/>
                                </WrapPanel>

                                <TextBlock Text="{Binding DateAdded, Converter={StaticResource RecordDateUpdateConverter}}" d:Text="17 Июня 2026 11:11"/>
                            </StackPanel>

                            <!--#endregion-->

                            <!--#region Изменен -->

                            <StackPanel Margin="20,0,0,0" DockPanel.Dock="Left">
                                <WrapPanel>
                                    <Viewbox Width="15" Margin="0,0,5,0">
                                        <Control Template="{StaticResource Updated}" Foreground="#10A64A"/>
                                    </Viewbox>
                                    <TextBlock Text="Обновлен" DockPanel.Dock="Top" Foreground="#438DB0"/>
                                </WrapPanel>

                                <TextBlock Text="{Binding DateUpdate, Converter={StaticResource RecordDateUpdateConverter}}" d:Text="17 Июня 2026 11:11"/>
                            </StackPanel>

                            <!--#endregion-->

                            <!--#region Гипперссылка -->

                            <StackPanel Margin="20,0,0,0" DockPanel.Dock="Left">
                                <WrapPanel>
                                    <Viewbox Width="15" Margin="0,0,5,0">
                                        <Control Template="{StaticResource Source}" Foreground="#10A64A"/>
                                    </Viewbox>
                                    <TextBlock Text="Источник" DockPanel.Dock="Top" Foreground="#438DB0"/>
                                </WrapPanel>

                                <TextBlock>
                                    <Hyperlink NavigateUri="{Binding Url}">
                                        <Hyperlink.Style>
                                             <Style TargetType="Hyperlink">
                                                <Setter Property="Foreground" Value="#009EFF" /> 
                                                <Setter Property="TextDecorations" Value="Underline" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                        <Setter Property="Foreground" Value="#50A7E7"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Hyperlink.Style>
                                        <TextBlock Text="Перейти" 
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="NoWrap"/>
                                        <b:Interaction.Triggers>
                                            <b:EventTrigger EventName="RequestNavigate">
                                                <behaviors:InvokeCommandWithHandled Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding Url}" />
                                            </b:EventTrigger>
                                        </b:Interaction.Triggers>
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>

                            <!--#endregion-->

                            <!--#region Элементы управление -->

                            <WrapPanel DockPanel.Dock="Right"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Margin="20,0,0,0">

                                <CheckBox IsChecked="{Binding IsFavorite, UpdateSourceTrigger=PropertyChanged}"
                                          Command="{Binding DataContext.UpdateFavoriteCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                          CommandParameter="{Binding }"
                                          Width="25"
                                          Cursor="Hand"
                                          ToolTip="Избранное"
                                          ToolTipService.Placement="Right">
                                    <CheckBox.Style>
                                        <Style TargetType="Control">
                                            <Setter Property="Template" Value="{StaticResource BrokenHeart}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                    <Setter Property="Template" Value="{StaticResource SolidHeart}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>

                                <Button Style="{StaticResource Button.App}"
                                        Command="{Binding DataContext.ShowEditMenuCommand, RelativeSource={RelativeSource AncestorType=ListView}}" Width="25" 
                                        CommandParameter="{Binding }"
                                        Margin="5,0,0,0"
                                        ToolTip="Править"
                                        ToolTipService.Placement="Right">
                                    <Button.Content>
                                        <Control Template="{StaticResource Edit}"/>
                                    </Button.Content>
                                </Button>

                                <Button Style="{StaticResource Button.App}"
                                        Width="25" 
                                        Margin="5,0,0,0"
                                        ToolTip="Архивировать"
                                        ToolTipService.Placement="Right">
                                    <Button.Content>
                                        <Control Template="{StaticResource Archive}"/>
                                    </Button.Content>
                                </Button>

                                <Button Style="{StaticResource Button.App}" 
                                        Command="{Binding DataContext.DeleteSecretCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"
                                        Width="25" 
                                        Margin="5,0,0,0"
                                        ToolTip="Удалить"
                                        ToolTipService.Placement="Right">
                                    <Button.Content>
                                        <Control Template="{StaticResource Trash}" Foreground="Red"/>
                                    </Button.Content>
                                </Button>

                            </WrapPanel>

                            <!--#endregion-->

                        </DockPanel>

                        <!--#endregion-->

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <!--#endregion-->

        </ListView>

        <!--#endregion-->

        <GridSplitter Grid.Column="1" 
                      Grid.Row="0" Grid.RowSpan="2"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Width="3"
                      ResizeDirection="Columns"
                      ResizeBehavior="BasedOnAlignment"
                      Visibility="{Binding VisibilityEditMenu}"/>

        <!--#region Отображение, добавление, редактирование записи -->

        <Grid Grid.Column="2"
              Grid.RowSpan="2"
              Visibility="{Binding VisibilityEditMenu}">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--#region Кнопки в Heder-->

            <Border Style="{StaticResource Border.Base.Card}"
                    CornerRadius="10,10,0,0"
                    Margin="5,0,27,0">
                <StackPanel>
                    <WrapPanel HorizontalAlignment="Right" Margin="0,2,10,0">

                        <Button Style="{StaticResource Button.App}"
                                HorizontalAlignment="Right"
                                ToolTip="В отдельном окне">
                            <Viewbox Width="22" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Control Template="{StaticResource OpenNewWindow}" Foreground="White"/>
                            </Viewbox>
                        </Button>

                        <Button Style="{StaticResource Button.App}" 
                                Command="{Binding HideEditMenuCommand}"
                                CommandParameter="{x:Reference EditMenuColumn}"  
                                HorizontalAlignment="Right"
                                ToolTip="Закрыть">
                            <Viewbox Width="22" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Control Template="{StaticResource Close}" Foreground="White"/>
                            </Viewbox>
                        </Button>
                    </WrapPanel>
                    <Rectangle Fill="#474747" Stroke="#474747" StrokeThickness="2" DockPanel.Dock="Top"/>
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region Поля для добалвение\изменение данных -->

            <ScrollViewer 
                          Grid.Row="1" VerticalScrollBarVisibility="Visible">
                <Border Style="{StaticResource Border.Base.Card}"
                        CornerRadius="0"
                        Margin="5,0,10,0">
                    <DockPanel Margin="15,0,15,0">

                        <!--#region Основные данные -->

                        <TextBlock Text="Основные данные"
                                   FontSize="25"
                                   Foreground="White"
                                   FontWeight="Black"
                                   Margin="0,10,0,10"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   HorizontalAlignment="Center"
                                   DockPanel.Dock="Top"/>

                        <DockPanel DockPanel.Dock="Top">

                            <WrapPanel DockPanel.Dock="Top">
                                <Viewbox Width="17">
                                    <Control Template="{StaticResource NameRecord.Pen}" Foreground="White"/>
                                </Viewbox>
                                <TextBlock Text="Название" 
                                           Style="{StaticResource TextBlock.AddingData}" 
                                           FontSize="18"
                                           FontFamily="Bahnschrift SemiBold"/>
                            </WrapPanel>

                            <TextBox Text="{Binding NameSecret, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <WrapPanel DockPanel.Dock="Top">
                                <Viewbox Width="17">
                                    <Control Template="{StaticResource GlobalNetwork}" Foreground="White"/>
                                </Viewbox>
                                <TextBlock Text="Url" 
                                           Style="{StaticResource TextBlock.AddingData}" 
                                           FontSize="18"
                                           FontFamily="Bahnschrift SemiBold"/>
                            </WrapPanel>

                            <TextBox Text="{Binding UrlSecret, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <Button Style="{StaticResource Button.App}"
                                    Command="{Binding UpdateMetadataCommand}"
                                    CommandParameter="{Binding SelectedSecretData}"
                                    Margin="0,5,0,0" 
                                    Width="25" 
                                    HorizontalAlignment="Right"
                                    ToolTip="Обновать блок"
                                    ToolTipService.Placement="Right">
                                <Button.Content>
                                    <Control Template="{StaticResource UpdateIcon}" Foreground="White"/>
                                </Button.Content>
                            </Button>

                        </DockPanel>

                        <!--#endregion-->

                        <!--#region Данные для шифровки ( Чувствительные ) -->

                        <TextBlock Text="Чувствительные данные"
                                   FontSize="25"
                                   Foreground="White"
                                   FontWeight="Black"
                                   Margin="0,10,0,10"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   HorizontalAlignment="Center"
                                   DockPanel.Dock="Top"/>

                        <DockPanel DockPanel.Dock="Top" Visibility="Visible">

                            <WrapPanel DockPanel.Dock="Top">
                                <Viewbox Width="17">
                                    <Control Template="{StaticResource User}" Foreground="White"/>
                                </Viewbox>
                                <TextBlock Text="Имя пользователя" 
                                           Style="{StaticResource TextBlock.AddingData}" 
                                           FontSize="18"
                                           FontFamily="Bahnschrift SemiBold"/>
                            </WrapPanel>

                            <TextBox Text="{Binding UsernameSecret, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <WrapPanel DockPanel.Dock="Top">
                                <Viewbox Width="17">
                                    <Control Template="{StaticResource Password}" Foreground="White"/>
                                </Viewbox>
                                <TextBlock Text="Пароль" 
                                           Style="{StaticResource TextBlock.AddingData}" 
                                           FontSize="18"
                                           FontFamily="Bahnschrift SemiBold"/>
                            </WrapPanel>

                            <TextBox Text="{Binding PasswordSecret, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <WrapPanel DockPanel.Dock="Top">
                                <Viewbox Width="17">
                                    <Control Template="{StaticResource EnvelopeLetter}" Foreground="White"/>
                                </Viewbox>
                                <TextBlock Text="Почта" 
                                           Style="{StaticResource TextBlock.AddingData}" 
                                           FontSize="18"
                                           FontFamily="Bahnschrift SemiBold"/>
                            </WrapPanel>

                            <TextBox Text="{Binding EmailSecret, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <WrapPanel DockPanel.Dock="Top">
                                <Viewbox Width="17">
                                    <Control Template="{StaticResource Secret}" Foreground="White"/>
                                </Viewbox>
                                <TextBlock Text="Секретное слово" 
                                           Style="{StaticResource TextBlock.AddingData}" 
                                           FontSize="18"
                                           FontFamily="Bahnschrift SemiBold"/>
                            </WrapPanel>

                            <TextBox Text="{Binding SecretWorldSecret, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <WrapPanel DockPanel.Dock="Top">
                                <Viewbox Width="17">
                                    <Control Template="{StaticResource RecoveryKey}" Foreground="White"/>
                                </Viewbox>
                                <TextBlock Text="Ключи востановление" 
                                           Style="{StaticResource TextBlock.AddingData}" 
                                           FontSize="18"
                                           FontFamily="Bahnschrift SemiBold"/>
                            </WrapPanel>

                            <TextBox Text="{Binding RecoveryKeysSecret, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBox.InputData}"
                                     DockPanel.Dock="Top"/>

                            <Button Style="{StaticResource Button.App}"
                                    Command="{Binding UpdateEncryptedDataCommand}"
                                    CommandParameter="{Binding SelectedSecretData}"
                                    Margin="0,5,0,0" 
                                    Width="25" 
                                    HorizontalAlignment="Right"
                                    DockPanel.Dock="Top"
                                    ToolTip="Обновать блок"
                                    ToolTipService.Placement="Right">
                                <Button.Content>
                                    <Control Template="{StaticResource UpdateIcon}" Foreground="White"/>
                                </Button.Content>
                            </Button>

                        </DockPanel>

                        <!--#endregion-->

                        <!--#region Заметки -->

                        <Button Style="{StaticResource Button.App}"
                                Command="{Binding UpdateNoteCommand}"
                                CommandParameter="{Binding SelectedSecretData}"
                                Margin="0,5,0,5" 
                                Width="25" 
                                HorizontalAlignment="Right"
                                DockPanel.Dock="Bottom"
                                ToolTip="Обновать блок"
                                ToolTipService.Placement="Right">
                            <Button.Content>
                                <Control Template="{StaticResource UpdateIcon}" Foreground="White"/>
                            </Button.Content>
                        </Button>

                        <TextBlock Text="Заметки"
                                   FontSize="25"
                                   Foreground="White"
                                   FontWeight="Black"
                                   Margin="0,10,0,10"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   HorizontalAlignment="Center"
                                   DockPanel.Dock="Top"/>

                        <TextBox Text="{Binding NotesSecret, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBox.InputData}"
                                 Background="#191C1F"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"   
                                 VerticalContentAlignment="Top"/>

                        <!--#endregion-->

                    </DockPanel>
                </Border>
            </ScrollViewer>

            <!--#endregion-->

            <!--#region Сохранить все изменение -->

            <Border Grid.Row="2" Style="{StaticResource Border.Base.Card}"
                    CornerRadius="0,0,10,10"
                    Margin="5,0,27,0">
                <StackPanel>
                    <Rectangle Fill="#474747" Stroke="#474747" StrokeThickness="2" DockPanel.Dock="Top"/>
                    <WrapPanel Grid.Row="2"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="5">

                    <Button Style="{StaticResource Button.App}"
                            Command="{Binding CreateSecretCommand}"
                            Margin="0,0,10,0">
                        <Button.Content>
                            <Control Width="20" Template="{StaticResource SaveIcon}" Foreground="White"/>
                        </Button.Content>
                    </Button>

